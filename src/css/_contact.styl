phone = max-width 800px
#fb, #cd, #gh
  font-size: 1.2em
.contact-page
  max-width: 100%
  overflow-x: hidden;
  overflow-y: hidden;
#contact-page
  position: absolute;
  width 80%
  height 80vh
  z-index: 100
  display flex
  flex-direction row
  align-items center
  overflow-y: hidden;
  overflow-x: hidden;
  @media(max-width 425px){
    flex-direction: column;
    width 100%
  }
  #left-box
    background white
    border 5px solid black
    border-left none
    height 85%
    width 50%
    display flex
    justify-content center
    align-items center
    overflow-x: hidden;
    overflow-y: hidden;
    @media(max-width: 425px){
      width 93%
      border-right none
      border-bottom none
      height 50%
      align-self: flex-start;
    }
    #name-tag
      display flex
      flex-direction column
      justify-content: center;
      align-items left
      background none
      color black
      width 50%
      height 100%
      @media(max-width 768px){
        width 95%
      }
      @media(max-width 320px){
        font-size .7em
      }
      ul
        display flex
        justify-content flex-start
        list-style none
        @media(max-width 425px){
          margin-top -2%
        }
        li
          padding-right 80px
      #tag
        font-variant small-caps
        font-size 2.5rem
        @media(max-width 425px){
          margin-top -5%
        }
        #name
          font-weight bold
      #title
        margin-top -35px
        font-size .8rem
        @media(max-width 425px){
          margin-top -13%
        }
      h4
        @media(max-width 425px){
          margin-top -2%
        }
      #desc
        font-size .8rem
        margin-top -2%

      p
        font-size 1rem
        span
          font-weight bold
          color black
        a
          text-decoration underline
          color black
          &:hover
            background black
            color white
            border-radius 2.5px

#right-box-container
  display: flex;
  justify-content: center;
  align-items:center;
  width 50%
  height 85%
  overflow-x: hidden;
  overflow-y: hidden;
  background-color: white
  border 5px solid black
  border-left none
  @media(max-width: 425px){
    width 96%
    height 45%
    align-self: flex-start

  }


#right-box
  display flex
  justify-content: center;
  align-items: center;
  flex-direction column
  width 50%
  background-color: white
  height 90%
  @media(max-width 425px){
    height 100%
  }
  @media(max-width 1024px){
    width 97.5%
  }
  .reach
    font-weight bold
    color black
    @media(max-width 425px){
      margin-top: -20px
    }
  #reach-header
    @media(max-width 425px){
      margin-top -55px

    }
  p
    font-size 2.5rem
    font-variant: small-caps;
    color black
    @media(max-width 425px){
      font-size: 1.5em
    }
  p.subheading
    color black
    font-size .8rem
    margin-top -35px
    @media(max-width 425px){
      left 0
    }
.socialLrg
  font-size: 36px
  a
    text-decoration: none
#contact-form
  display flex
  flex-direction column
  align-items: center;
  @media(max-width 425px){
    width 100%
    flex-direction: row
    flex-wrap: wrap;
  }
  input
    background rgba(0,0,0,0.9)
    color white
    padding 10px
    width 300px
    margin-bottom 10%
    border 1px solid white
    @media(max-width 425px){
      margin-bottom 4px
    }
  textarea
    color white
    padding-bottom 75px
    background rgba(0,0,0,0.9)
    border 1px solid white
    width 300px
    padding-left 20px
    padding-top 20px
    order 3
    @media(max-width 425px){
      padding-top 0px
      padding-bottom 10px
      height 20%
      position: absolute;
      bottom 0
      left 0
    }
  button
    margin-top 10px
    cursor: pointer
    order 4
    @media(min-width 1235px){
      margin-bottom 10%
    }
    @media(max-width 425px){
      width 75px
      margin-bottom 30px
    }
    text-decoration none
    color black
    padding 10px 20px 10px 20px
    width 100px
    background none
    border 2px solid black
    &:hover
      background black
      color white
      font-weight: bold


.socialLrg
  font-size: 2em
  a
    text-decoration: none;

.soc2 a
  color black
  &:hover
    color #1A85BC
.soc3 a
  color black
  &:hover
    color lighten(gray, 36%)
