phone = max-width 800px
#fb, #cd, #gh
  font-size: 1.2em
.contact-page
  max-width: 100%
  overflow-x: hidden;
  overflow-y: hidden;
#contact-page
  position: absolute;
  width 80%
  height 80vh
  z-index: 100
  display flex
  flex-direction row
  align-items center
  overflow-y: hidden;
  overflow-x: hidden;
  @media(max-width 425px){
    flex-direction: column;
    width 100%
    height 90%
  }
  #left-box
    background white
    border 5px solid black
    border-left none
    height 85%
    width 50%
    display flex
    justify-content center
    align-items center
    overflow-x: hidden;
    overflow-y: hidden;
    @media(max-width: 425px){
      width 93%
      border-right none
      border-bottom none
      height 45%
      align-self: flex-start;
    }
    #name-tag
      display flex
      flex-direction column
      justify-content: center;
      align-items left
      background none
      color black
      width 50%
      height 100%
      @media(max-width 768px){
        width 95%
      }
      @media(max-width 320px){
        font-size .7em
      }
      ul
        display flex
        justify-content flex-start
        list-style none
        @media(max-width 425px){
          margin-top -2%
        }
        li
          padding-right 80px
      #tag
        font-variant small-caps
        font-size 2.5rem
        @media(max-width 425px){
          margin-top -5%
          display: none
        }
        #name
          font-weight bold

      #title
        margin-top -35px
        font-size .8rem
        @media(max-width 425px){
          margin-top -13%
        }
      h4
        @media(max-width 425px){
          margin-top -2%
        }
      #desc
        font-size .8rem
        margin-top -2%

      p
        font-size 1rem
        span
          font-weight bold
          color black
        a
          text-decoration underline
          color black
          &:hover
            background black
            color white
            border-radius 2.5px
.soc2 a
  color black
  &:hover
    color #1A85BC
.soc3 a
  color black
  &:hover
    color lighten(gray, 36%)
