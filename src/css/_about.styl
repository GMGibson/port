div.aboutContainer
  display flex
  overflow-y: hidden;
  overflow-x: hidden;
  position: relative;
  justify-content: center;
  align-items: center;
  height 98vh
  width 100%
  margin-top 4vh

ul.aboutList
  display: flex;
  flex-direction: row;
  justify-content: center
  align-items: center
  li.pane
    opacity: 1;
    display: flex;
    flex-direction: column
    margin-top 10vh
    padding-right 10px
    list-style: none
    .sections
      color black
      h4
        font-size 1.5em
      ul
        display: flex
        flex-wrap: wrap;
        list-style: none
        li
          padding 0px 25px
          color black
          font-weight: bold;
          @media(max-width 425px){
            font-weight: normal;
            margin-left -30px

          }
.about1
  z-index: 2
  display: flex
  height 70vh
  width 40vw
  @media (max-width 1090px){
    position: absolute;
    left 0
    top 0
    padding-top: -20vh
  }
  @media(max-width 523px){
    width 100%

  }

  section
    display: block;
#section1
  p
    @media(max-width 1024px){
      font-size 1.5em
      margin-bottom -20px
    }
    font-size 2em
  @media(max-width 1090px){
    width 500px
  }
  @media(max-width 523px){
    position: absolute;
    width 300px
    font-size 10px
    top 0%
    margin-top -10%
  }
#section2
  @media(max-width 523px){
    position: absolute;
    top 60%
    right 30%
  }
  li
    @media(max-width 523px){
      text-shadow: .5px .5px 1px white
    }
#section3
  overflow: hidden;
  position: relative;
  @media(max-width 523px){
    position: absolute;
    top: 20%
    right: 15%
  }
  li
    @media(max-width 523px){
      text-shadow: .5px .5px 1px white
    }


