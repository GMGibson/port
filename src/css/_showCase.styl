.showcase
  overflow-x: hidden;
  overflow-y: hidden;
  display flex
  justify-content center
  align-items center
  height 90%
  @media (max-width: 890px) {
    flex-direction column
  }
.show-left
  display flex
  justify-content center
  flex-direction column
  align-items center
  @media (max-width: 890px) {
    margin-left 0px
  }
.show-right
  height 100%
  width 100%
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  figure
    width 30%
    height 30%
    @media(max-width: 890px) {
      border 2px solid black
      overflow-y: hidden;
      overflow-x: hidden;
      width 75vw
      height 15vh
    }
    a
      display: inline-block;
      text-decoration: none
      &:hover
        transition .2s
        transform scale(1.25)
      .pject-header
        height: 10%
        width 100%
        background: white
        color black
        text-align: center
        font-variant: small-caps;
        font-size 1.4em
        &:hover
          z-index: 10
      img
        border 1px solid white
        max-width: 100%
        max-height: 100%

.intro
  font-size 1.2rem
  margin-bottom -40px

.dev
  font-size 2.4rem
  span
    color #DD2321
