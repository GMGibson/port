.MidLetterRow
  height 88%
  width: 90%
  overflow-x: hidden;
  overflow-y: hidden;
  position: absolute;
  display: flex
  justify-content: center;
  align-items: center;
  top 45%
  left 50%
  transform: translate(-50%, -50%);
.LetterRow
  display: flex
  flex-direction: column;
  max-width 20px
  margin  0px 50px
  font-family: 'Lobster', cursive;
  font-size: 3.5em;
  @media(max-width 1440px){
    margin 0px 25px
  }
  @media(max-width 425px){
    margin 0px 8px
    font-size 1em
  }
.currentLetter
  opacity 1
  color black
.final
  max-width: 100%
  overflow-x: hidden;
  overflow-y: hidden;
  position: absolute;
  display: flex
  justify-content: space-around;
  align-items: center;
  top 45%
  left 50%
  transform: translate(-50%, -50%);
  div
    background white
    opacity: 0
    font-family: 'Lobster', cursive;
    font-size: 3.5em
    padding: 0px 51px
    max-width: 20px
    @media(max-width 1440px){
      padding: 0px 25px
    }
    @media(max-width 425px){
      padding 0px 8px
      font-size 1em
    }
.N
  text-transform: lowercase;
