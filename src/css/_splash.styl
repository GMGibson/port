.nameTag
  font-family: 'Lobster', cursive;
  font-size: 3.5em
  display: inline;
  div.nameBack
    display: inline
    text-decoration: underline;

.nameTagLocation
  position: absolute;
  top 45%
  left 50%
  transform:translate(-50%, -50%);
.label
  width 100px
  height 100px
  display: flex;
  flex-direction row;
  justify-content: center;
  align-items: center;
.logo2
  color white
  padding-left 5px
  padding-bottom 5px
  align-self baseline;
  font-size 64px;
  font-weight: bold;
  text-decoration: none;

.LeavePage
  z-index: 1000
  cursor: pointer;
  padding 5px 20px
  background none;
  border 3px solid black
  position: absolute;
  bottom 0%
  left 50%
  color black
  font-family: 'Roboto Mono'
  transform: translate(-50%, -50%);
  &:hover
    color white
    background: black
