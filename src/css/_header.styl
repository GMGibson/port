.container
  border-bottom 2px solid black
.navigation
  position: relative;
  display flex
  justify-content space-around
  align-items center
  height 10vh
div.label
  font-family: 'Lobster', cursive;
  font-variant: small-caps;
  a
    color black
section
  span
    color #4CE88B
  span.flipper
    color rgba(0,0,0,0.7)
    input
      border none
      &:focus
        outline none
.logo2
  cursor: pointer
.link-list
  list-style none
  display flex
  align-self center
  @media(max-width : 800px) {
    width 33vw
    display: inline-block;
  }

.item a
  font-size: 1em
  color black
  text-decoration none
  padding 0 20px
  font-variant: small-caps;
  font-weight: bold;
.item1 a
  &:hover
    color #DD2321
  &:focus
    border-bottom 1px solid #DD2321
    padding-bottom 10px
    @media(max-width: 800px) {
      padding-bottom: 1px
    }
.item2 a
  &:hover
    color #DD2321
  &:focus
    border-bottom 1px solid #DD2321
    padding-bottom 10px
    @media(max-width: 800px) {
      padding-bottom: 1px
    }
.item3 a
  &:hover
    color #DD2321
  &:focus
    border-bottom 1px solid #DD2321
    padding-bottom 10px
    @media(max-width: 800px) {
      padding-bottom: 1px
    }

.hiddenName
  display: inline;
